@model newMHRS.Models.Hasta

@{
    ViewBag.Title = "Iletisim Bilgilerim";
}

<h4 style="padding-left:180px">İletişim Bilgilerimi Düzenle</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="row">

        <div class="col-md-2"></div>
        <div class="col-md-8">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Tc)
            @Html.HiddenFor(model => model.Ad)
            @Html.HiddenFor(model => model.Soyad)
            @Html.HiddenFor(model => model.AnneAdi)
            @Html.HiddenFor(model => model.BabaAdi)
            @Html.HiddenFor(model => model.Cinsiyet)
            @Html.HiddenFor(model => model.DogumYeri)
            @Html.HiddenFor(model => model.DogumTarihi)
            @Html.HiddenFor(model => model.Cinsiyet)
            @Html.HiddenFor(model => model.Sifre)
            @Html.HiddenFor(model => model.TSifre)




            <div class="form-group">
                @Html.LabelFor(model => model.CepTel, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CepTel, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CepTel, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mail, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-success" />
                    <a class="btn btn-primary" href="@Url.Action("IletisimDetail","HastaBilgi")">Bilgilerime Geri Dön</a>
                </div>
            </div>

        </div>
    </div>
</div>
}

