                <label>@ViewBag.FazlaBolum</label>
                <label>@ViewBag.aynıDokRan</label>
                @Html.ValidationMessageFor(model => model.BolumId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DoktorId, "Doktor :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("DoktorId", null, htmlAttributes: new { @class = "form-control" })*@
