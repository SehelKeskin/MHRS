                <div class="checkbox">
                    @Html.DropDownListFor(m => m.SaatId, new SelectList(""), "--Seçim Yapınız", new { @class = "form-control" })
                    @ViewBag.SaatDurum
                    @Html.ValidationMessageFor(model => model.SaatId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
                <a class="btn btn-primary" href="@Url.Action("Index","Randevu")">Listeye Geri Dön</a>
            </div>
        </div>
    </div>
</div>
<div class="col-md-2"></div>
