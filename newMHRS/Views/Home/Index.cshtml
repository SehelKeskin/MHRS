@{
    ViewBag.Title = "Home Page";
    Layout = null;


}


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Randevu Sistemi Uygulamam</title>

    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- Page Title -->
    <title>Medino</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="assets/images/logo/favicon.png" type="image/x-icon">

    <!-- CSS Files -->

    <link rel="stylesheet" href="~/assets/css/animate-3.7.0.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome-4.7.0.min.css">
    <link rel="stylesheet" href="~/assets/css/bootstrap-4.1.3.min.css">
    <link rel="stylesheet" href="~/assets/css/owl-carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/jquery.datetimepicker.min.css">
    <link rel="stylesheet" href="~/assets/css/linearicons.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
   
    <header class="header-area">

        <div id="header" @*id="home"*@>

            <div class="container">
                <div class="row align-items-center justify-content-between d-flex">
                    <div id="logo">
                        <a href="index.html"><img src="~/assets/images/logo/logo.png" alt="" title="" /></a>
                    </div>

                </div>
            </div>
        </div>
    </header>
    <div @*class="container body-content"*@>

        <!-- Banner Area Starts -->
        <section class="banner-area">
            <div class="container" style="overflow-y: hidden !important;">
                <div class="row">
                    <div class="col-lg-5">

                        <h1>Randevu Almak </h1><h1>Artık Çok Kolay.</h1>

                        <p>Randevunuzu istediğiniz saat alabilir,</p>
                        <p>Randevu bilgilerinize ulaşabilir</p>
                        <p>Randevunuzu kolaylıkla iptal edebilirsiniz.</p>


                        <a class="template-btn mt-3" href="@Url.Action("Index","Login")">Randevu Almak İçin Tıklayınız.</a>
                    </div>
                </div>
            </div>
        </section>



        <!-- Javascript -->
        <script src="~/assets/js/vendor/jquery-2.2.4.min.js"></script>
        <script src="~/assets/js/vendor/bootstrap-4.1.3.min.js"></script>
        <script src="~/assets/js/vendor/wow.min.js"></script>
        <script src="~/assets/js/vendor/owl-carousel.min.js"></script>
        <script src="~/assets/js/vendor/jquery.datetimepicker.full.min.js"></script>
        <script src="~/assets/js/vendor/jquery.nice-select.min.js"></script>
        <script src="~/assets/js/vendor/superfish.min.js"></script>
        <script src="~/assets/js/main.js"></script>

    </div>



</body>
</html>