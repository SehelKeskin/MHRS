@model newMHRS.Models.Hasta
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="tr">
<head >
    <link href="~/Content/hastaGiris.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">



</head>
<body>


    <div id="login-div">
        @using (Html.BeginForm("Authorise", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="wrapper fadeInDown">
                <div id="formContent">
                    <!-- Tabs Titles -->
                    <!-- Icon -->
                    <div class="fadeIn first">
                        <img style="width:180px" src="~/Content/mhrsicon.png" id="icon" alt="User Icon" />

                    </div>
                    <br /><br />
                    <!-- Login Form -->
                          <form>

                              <label class="field-validation-error text-danger">@ViewBag.Message</label><br />

                              <label style="margin-left:12px;color:dodgerblue;font-size:15px">TC :</label>
                              @Html.TextBoxFor(model => model.Tc, new { @class = "fadeIn second", @id = "login", @name = "login" })
                              <label class="field-validation-error text-danger">
                                  @Html.ValidationMessageFor(model => model.Tc)
                              </label><br />
                              @*@Html.EditorFor(model => model.Tc)*@
                              <label style="margin-left:5px;color:dodgerblue;font-size:15px">Şifre :</label>
                              @Html.TextBoxFor(model => model.Sifre, new { @class = "fadeIn third", @id = "password", @name = "login" })
                              <label class="field-validation-error text-danger">
                                  @Html.ValidationMessageFor(model => model.Sifre)
                              </label>

                              <br /><br />

                              @*<input type="text" id="password" class="fadeIn third" name="login" placeholder="password">*@
                              <input type="submit" class="fadeIn fourth" value="Giriş">
                          </form>

                    <!-- Remind Passowrd -->
                    <div id="formFooter">
                        <a class="underlineHover" href="#">Şifremi Unuttum </a>|
                        <a class="underlineHover" href="@Url.Action("Create", "Login")">Kayıt Oluştur</a>
                    </div>

                </div>
            </div>
         
        }

        @*<script src="~/Scripts/jquery-3.3.1.min.js"></script>*@

        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>*@

    </div>

