@model IEnumerable<newMHRS.Models.Hastahane>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Yeni Hastane Kaydı Oluşturmak İçin Tıklayın.", "Create")
</p>
<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th scope="col">
                @*@Html.DisplayNameFor(model => model.Ad)*@
              <label>Hastane Adı</label>
            </th >
            <th scope="col">
                @*@Html.DisplayNameFor(model => model.Sehir.Ad)*@
                <label>İl</label>
            </th>
            <th scope="col">
                @*@Html.DisplayNameFor(model => model.Ilce.Ad)*@
                <label>İlçe</label>
            </th>
            <th scope="col">
                @*@Html.DisplayNameFor(model => model.Tel)*@
                <label>Telefon</label>
            </th>

            <th scope="col">
                @*@Html.DisplayNameFor(model => model.Adres)*@
                <label>Adres</label>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Sehir.Ad)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Ilce.Ad)
                </td>

                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Tel)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Adres)
                </td>

                <td   scope="row" class="text-nowrap">
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm " })
                    @*@Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-sm " })*@
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>

            </tr>
        }
    </tbody>

</table>
